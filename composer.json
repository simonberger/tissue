{
  "name": "simonberger/tissue",
  "description": "A PHP library that scans your files for viruses using the adapter of your choice",
  "keywords": [
    "anti-virus",
    "virus",
    "clamav",
    "security"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Cas Leentfaar",
      "homepage": "https://github.com/cleentfaar",
      "email": "info@casleentfaar.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "symfony/options-resolver": "^4.4",
    "symfony/process": "^4.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "CL\\Tissue\\": ""
    },
    "exclude-from-classmap": [
      "Tests/"
    ]
  },
  "config": {
    "bin-dir": "bin"
  }
}
